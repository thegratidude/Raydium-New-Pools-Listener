# Optimized Trading Configuration for Maximum Performance
# Copy these to your .env file for lightning-fast trading

# Core Trading Settings
AUTO_TRADING_ENABLED=true
TRADE_SOL_AMOUNT=0.05
TRADE_SLIPPAGE=5
MAX_TRADES_PER_HOUR=10

# Performance Optimizations
ASYNC_LOGGING=true
LOG_BUFFER_SIZE=100
TRADE_TIMEOUT_MS=30000
MAX_CONCURRENT_TRADES=3

# Memory Management
MAX_PENDING_POOLS=50
CLEANUP_INTERVAL_MS=300000
HEALTH_CHECK_INTERVAL_MS=60000

# Network Optimizations
RECONNECT_DELAY=5
MAX_RECONNECTION_ATTEMPTS=0
RECONNECTION_DELAY_MAX=30

# RPC Optimizations (if using Helius)
HELIUS_RPC_URL=your_helius_url_here
HELIUS_WS_URL=your_helius_ws_url_here
RPC_TIMEOUT_MS=5000
WS_TIMEOUT_MS=10000 